@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.NewsItemPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Services;
@using Umbraco.Cms.Core.Models.PublishedContent;
@inject IUserService Userservice;

@{
    Layout = "LayoutWithBreadcrumb.cshtml";
    var userService = Userservice;
    var image = Model.Value<IPublishedContent>("newsImage");
}


<div class="news-articles-container container">
        <div class="news-content">
            <h2 class="news-h2">@Model.Name("pageName")</h2>
            <div class="news-text">
                <p>@Model.CreateDate.ToString("MMM dd, yyyy")</p>
                <p>@Model.Value("newsCategory")</p>
                <p>@Model.CreatorName(Userservice)</p>
            </div>
        </div>
        <div class="content-container">
            <div class="column-content">
                <div class="news-left-column">
                    <img src="@image.Url()" alt="" />
                    <div class="news-p-text">
                    <p>@Model.Value("newsContent")</p>
                    </div>
                    
                        
                    @Model.Value("newsTags")
                        
                    <div class="news-buttons">
                        @foreach(var tag in Model.Value<IEnumerable<string>>("newsTags")) 
                        {
                            <button class="Digitalization-button">@tag</button>
                        }
                        
                    </div>
                </div>
            <div class="news-right-column">
            <div class="news-input-field">
              <input
                class="news-search-field"
                type="search"
                placeholder="Type To Search"
              />
            </div>
            <div class="news-content-border">
              <div class="news-card">
                <div class="articles-card-content">
                  <div class="article-card-text">
                    <h3 class="news-h3">Recent Posts</h3>
                    <h4 class="news-h4">
                      How To Blow Through Capital At An Incredible Rate
                    </h4>
                    <p class="blog-posts-text">Jan 14, 2020</p>
                    <div class="blog-border"></div>
                  </div>
                </div>
              </div>
              <div class="news-card">
                <div class="articles-card-content">
